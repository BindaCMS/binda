<% content_for :header do %>
  <div class="main-header--buttons">
    <%= link_to 'New Page', new_page_path, class: 'main-header--link btn btn-primary' %>    
  </div>
  <h3>Pages</h3>
<% end %>

<% content_for :content do %> 
  <div class="main-table--row row">
    <div class="col-sm-12">

      <table class="table table-striped">
        <thead>
          <tr>
            <th class="col-sm-5">Title</th>
            <th class="col-sm-2">Publish state</th>
            <th class="col-sm-2">Structure Type</th>
            <th class="col-sm-3"></th>
          </tr>
        </thead>
        
        <tbody class="sortable" data-update-url="<%= pages_sort_path() %>">
          <% @pages.each do |page| %>
            <tr id="page_<%= page.id %>">    
              <td><%= page.name %></td>
              <td><%= page.publish_state %></td>
              <td><%= page.structure.name if page.structure.present? %></td>
              <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to 'Edit', edit_page_path(page) %> <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> <%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' %></td>
            </tr>
          <% end %>
        <tbody>
      </table>
    
    <%= link_to 'New Page', new_page_path, class: 'main-header--link btn btn-default' %>    
        
  </div>
</div>
<% end %>
