<div class="row">
<div class="form-inputs col-sm-12">

<%= simple_form_for [ structure, field_group, field_setting ], defaults: { label: false } do |f| %>
  <% if field_setting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize( field_setting.errors.count, "error") %> prohibited this field_setting from being saved:</h2>

      <ul>
      <% field_setting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-8">

      <div class="form-inputs--row row">
        <div class="col-sm-12">

          <h4><%= "#{ t :details }".capitalize %></h4>
          
          <h5><%= "#{ t :title }".capitalize %></h5>
          <%= f.input :name %>
          
          <% if field_setting.slug.nil? %>
            <%= f.input :slug, as: :hidden %>
          <% else %>
            <h5><%= "#{ t :slug }".capitalize %></h5>
            <%= f.input :slug, disabled: true, hint: "#{ t :slug_disable_hint }" %>
          <% end %>

          <h5><%= "#{ t :field_type }".capitalize %></h5>
          <%= f.input :field_type, as: :select, collection: [ 'text', 'asset', 'gallery', 'repeater' ], include_blank: false %>

        </div>
      </div>

      <%# binding.pry %>
      <%# render "parent_group", parent_group: field_setting, f: f %>


    </div>
    <div class="col-sm-4">
      <div class="form-inputs--row row">
        <div class="col-sm-12">
          <div class="form-actions">
            <h4><%= "#{ t :setting }".pluralize.capitalize %></h4>
            <%= f.button :submit, 'Save changes', class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
<% end %>

</div>
</div>