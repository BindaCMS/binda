<div class="form-inputs--row row">
  <div class="col-sm-12">

    <h4><%= "#{ t :field_setting }".pluralize.capitalize %></h4>

    <%= f.simple_fields_for :field_settings do |ff| %>

			<%= ff.input :field_group_id, as: :hidden %>
			<%= ff.input :id, as: :hidden %>

      <h5><%= "#{ t :field_setting }".capitalize %> <%= "#{ t :title }" %></h5>
			<%= ff.input :name %>

			<a href="<%= structure_field_group_field_setting_path( field_group_id: parent_group.slug, id: ff.object.slug ) %>"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= "#{ t :edit }".capitalize %> <%= ff.object.name.capitalize %> <%= t :field_setting %></a>

			<hr>

    <% end %>

    <% if parent_group.slug.nil? %>
      <h5><%= t( :hint_create_parent_before_child, arg1: "#{ t :field_group }", arg2: "#{ t :field_setting }" ).capitalize %></h5>
    <% else %>
      <a class="main-header--link btn btn-default" href="<%= new_structure_field_group_field_setting_path( field_group_id: parent_group.slug ) %>"><%= "#{ t :new }".capitalize %> <%= t :field_setting %></a>
    <% end %>

  </div>
</div>