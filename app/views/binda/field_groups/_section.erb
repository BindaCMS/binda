<div class="form-section--wide-container row">
  <div class="col-sm-12 form-section">

    <h4><%= "#{ t :field_setting }".pluralize.capitalize %></h4>

    <%= f.simple_fields_for :field_settings, f.object.field_settings.order( :position ) do |ff| %>
      <div class="form-item <%= "form-item--#{ ff.object.field_type }" unless ff.object.field_type.nil? %>">
        <%= render 'field_setting_input_fields', ff: ff, section: section %>
      </div>
    <% end %>

    <%= f.simple_fields_for 'new_field_settings[]', @field_group.field_settings.build() do |ff| %>
      <div id="new-child-1" class="form-item form-item--new">
        <%= render 'field_setting_input_fields', ff: ff, section: section %>
      </div>
    <% end %>

    <% if section.slug.nil? %>
      <h5>
        <%= t( :hint_create_parent_before_child, arg1: "#{ t :field_group }", arg2: "#{ t :field_setting }" ).capitalize %>  
      </h5>
    <% else %>
      <a class="form-item--add-new main-header--link btn btn-default" href="<%= new_structure_field_group_field_setting_path( field_group_id: section.slug ) %>" data-new-child-id="new-child-1">
        <%= "#{ t :new }".capitalize %> <%= t :field_setting %>  
      </a>
    <% end %>

  </div>
</div>