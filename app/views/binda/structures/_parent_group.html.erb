<h4><%= "#{ t :field_group }".pluralize.capitalize %></h4>

<%= f.simple_fields_for :field_groups do |ff| %>

	<%= ff.input :structure_id, as: :hidden %>
	<%= ff.input :id, as: :hidden %>

  <h5><%= "#{ t :field_group_title }".capitalize %></h5>
	<%= ff.input :name %>

	<a href="<%= structure_field_group_path( @structure.slug, ff.object.slug ) %>"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= "#{ t :edit }".capitalize %> <%= ff.object.name.capitalize %> <%= t :field_group %></a>

	<hr>

<% end %>