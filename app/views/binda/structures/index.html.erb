<% content_for :header do %>
  <div class="main-header--buttons">
    <%= link_to 'New Structure', new_structure_path, class: 'main-header--link btn btn-primary' %>    
  </div>
  <h3>Structures</h3>
<% end %>

<% content_for :content do %> 
  <div class="main-table--row row">
    <div class="col-sm-12">

      <table class="table table-striped">
        <thead>
          <tr>
            <th colspan="3">Structure</th>
            <th></th>
          </tr>
        </thead>
        
        <tbody>
          <% @structures.order( :position, :name ).each do |structure| %>
            <tr id="structure_<%= structure.id %>">    
              <td colspan="3"><%= structure.name %></td>
              <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to 'Edit', edit_structure_path(structure) %> <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> <%= link_to 'Destroy', structure, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' %></td>
            </tr>
          <% end %>
        <tbody>
      </table>
    
    <%= link_to 'New Structure', new_structure_path, class: 'main-header--link btn btn-default' %>    
        
  </div>
</div>
<% end %>
