<ul id="form-item--repeater-setting-<%= repeater_setting.id %>" 
	class="sortable sortable--disabled" 
	data-update-url="<%= url_for([@structure, @instance, :sort_repeaters]) %>" 
	data-message="<%= t 'binda.sort_items_loader', { arg1: t('binda.components').downcase } %>">
	<% if repeaters.size == 0 %>
		<%= render 'binda/fieldable/form_item_repeater/form_item_repeater_empty_list', 
			repeaters: repeaters,
			repeater_setting: repeater_setting, 
			f: f %>
	<% else %>
		<%= render 'binda/fieldable/form_item_repeater/form_item_repeater_default_list', 
			repeaters: repeaters,
			repeater_setting: repeater_setting, 
			f: f %>		
	<% end %>
</ul>