<div class="standard-form">

<%= simple_form_for category, url: get_form_category_url do |f| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize( category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="standard-form--body">

    <div class="standard-form--container">

      <div class="standard-form--header">
        <p><%= "#{ t :details }".capitalize %></p>
      </div>

      <div class="standard-form--fields">

        <%= f.input :name, label: "#{t('binda.title')}".capitalize %>

        <% if f.object.slug.nil? %>
          <%= f.input :slug, as: :hidden %>
        <% else %>
          <%= f.input :slug, disabled: true, hint: "#{ t :slug_disable_hint }" %>
        <% end %>

        <%= f.input :description, label: "#{t('description')}".capitalize %>

        <%= f.input :position, label: "#{t('position')}".capitalize %>

      </div>

    </div>

  </div>

  <div class="standard-form--container standard-form--sidebar">

    <div class="standard-form--header">
      <p><%= t(:setting).capitalize.pluralize %></p>
    </div>
    <div class="standard-form--main-actions">
      <%= label_tag :submit, "<i class=\"fas fa-check\"></i>Save changes".html_safe, class: 'b-btn b-btn-primary b-btn-settings', id: 'save' %>
    </div>
  </div>

<% end %>

</div>
